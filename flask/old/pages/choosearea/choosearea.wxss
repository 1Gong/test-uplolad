.camera-box {
  width: 100vw;
  height: 100vh
}
.btns-box{
  position: absolute;
  width: 50%;
  height: 15%;
  display: flex;
  right: 200rpx; 
  bottom: 0rpx;
  /* justify-content: space-around; */
  /* z-index: 9999; */
}
.camera-box .camerabgImage {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0
}

.camera-box .camerabgImage .active {
  position: absolute;
  /* top: 400rpx; */
  top: 0rpx;
  left: 0rpx;
  /* right: 36rpx */
  /* width: 100vw; */
}

.camera-box .camerabgImage .active-image {
  display: block;
  width: 750rpx;
  height: 750rpx
  /* height: 280rpx */
}

.camera-box .camerabgImage .text {
  text-align: center;
  margin-top: 56rpx;
  margin-bottom: 240rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #D9D9D9;
  line-height: 40rpx
}

.camera-box .camerabgImage .btn {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background: #fff;
  border: 6rpx solid#fff;
  margin: 0 auto
}

.camera-box .camerabgImage .btn .button {
  width: 102rpx;
  height: 102rpx;
  border-radius: 50%;
  border: 4rpx solid#000
}

